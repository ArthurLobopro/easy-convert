{
  "name": "var-utils",
  "displayName": "var-utils",
  "description": "Extension that provides utilities for var names (or any text)",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "var-utils.toUpperCase",
        "title": "Convert to Upper Case"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "var-utils.toUpperCase",
          "when": "editorHasSelection && !editorHasMultipleSelections"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "node esbuild.js --production",
    "pretest": "npm run compile-tests && npm run compile && npm run lint"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "esbuild": "^0.27.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3"
  }
}