{
  "name": "easy-convert",
  "displayName": "Easy Convert",
  "description": "Extension that provides utilities for converting names",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "publisher": "ArthurLobo",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "icon": "icon.png",
  "contributes": {
    "commands": [
      {
        "command": "easy-convert.toUpperCase",
        "title": "Convert to Upper Case"
      },
      {
        "command": "easy-convert.toLowerCase",
        "title": "Convert to Lower Case"
      },
      {
        "command": "easy-convert.toSnakeCase",
        "title": "Convert to Snake Case"
      },
      {
        "command": "easy-convert.toPascalCase",
        "title": "Convert to Pascal Case"
      },
      {
        "command": "easy-convert.toCamelCase",
        "title": "Convert to Camel Case"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "easy-convert.submenu",
          "when": "editorHasSelection && !editorHasMultipleSelections"
        }
      ],
      "easy-convert.submenu": [
        {
          "command": "easy-convert.toUpperCase",
          "when": "editorHasSelection && !editorHasMultipleSelections"
        },
        {
          "command": "easy-convert.toLowerCase",
          "when": "editorHasSelection && !editorHasMultipleSelections"
        },
        {
          "command": "easy-convert.toSnakeCase",
          "when": "editorHasSelection && !editorHasMultipleSelections"
        },
        {
          "command": "easy-convert.toCamelCase",
          "when": "editorHasSelection && !editorHasMultipleSelections"
        },
        {
          "command": "easy-convert.toPascalCase",
          "when": "editorHasSelection && !editorHasMultipleSelections"
        }
      ]
    },
    "submenus": [
      {
        "id": "easy-convert.submenu",
        "label": "Easy Convert"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "node esbuild.js --production",
    "pretest": "npm run compile-tests && npm run compile && npm run lint"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/node": "22.x",
    "@types/vscode": "^1.90.0",
    "esbuild": "^0.27.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3"
  }
}